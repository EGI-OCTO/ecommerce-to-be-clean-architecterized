<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">
    <entity class="com.exo.ecommerce.domain.Item" access="FIELD">
        <table name="item"/>
        <attributes>
            <id name="id">
                <column name="id"/>
            </id>
            <basic name="description">
                <column name="description"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="price">
                <column name="price" column-definition="FLOAT"/>
            </basic>
            <basic name="remainingInStock">
                <column name="remaining_in_stock" column-definition="INT"/>
            </basic>
        </attributes>
    </entity>
    <entity class="com.exo.ecommerce.domain.Cart">
        <table name="cart"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="checkedOut">
                <column name="checked_out"/>
            </basic>
            <many-to-many name="items"/>
        </attributes>
    </entity>
    <entity class="com.exo.ecommerce.domain.Invoice">
        <table name="invoice"/>
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="date">
                <column name="date"/>
            </basic>
            <one-to-one name="cart"/>
        </attributes>
    </entity>
</entity-mappings>